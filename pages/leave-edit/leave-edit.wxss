.container {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  padding-bottom: 160rpx;
  background-color: #f0f2f5;
  min-height: 100vh;
  box-sizing: border-box;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

/* 表单卡片 */
.form-section {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 24rpx;
  box-sizing: border-box;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

/* 学生信息显示 */
.student-info {
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 24rpx;
}

.student-text {
  font-size: 28rpx;
  color: #666;
}

/* 时间选择器布局 */
.time-picker-row {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.time-picker-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.label {
  font-size: 26rpx;
  color: #666;
  min-width: 140rpx;
  flex-shrink: 0;
}

.date-picker {
  flex: 1;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
}

.date-picker:active {
  background-color: #eef0f2;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

/* 时长显示 */
.duration-display {
  background: linear-gradient(135deg, #e0f2fe 0%, #f0f9ff 100%);
  border: 2rpx solid #bae6fd;
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
}

.duration-text {
  font-size: 32rpx;
  color: #0369a1;
  font-weight: 600;
}

/* 提交按钮 */
.submit-btn {
  width: calc(100% - 60rpx);
  height: 96rpx;
  line-height: 96rpx;
  position: fixed;
  bottom: calc(env(safe-area-inset-bottom) + 30rpx);
  left: 30rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(3, 105, 161, 0.3);
}

.submit-btn[disabled] {
  background-color: #ccc;
  box-shadow: none;
}
